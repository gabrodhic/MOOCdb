.login-box
  .login-title
    %h2 Login to MOOCvis
  .login-form
    = form_for @user_session, :html => {:class => "form-horizontal", :role => 'form'}, :url => user_sessions_path do |form|
      .form-group
        %label.col-sm-4.control-label{:for => 'username'} Username
        .col-sm-8
          = form.text_field :username, :placeholder => 'username', :id => 'username', :class => "form-control"

      .form-group
        %label.col-sm-4.control-label{:for => 'password'} Password
        .col-sm-8
          = form.password_field :password, :placeholder => 'password', :id => 'password', :class => "form-control"
      - if flash[:notice]
        .login-message
          = flash[:notice]

      .form-group
        .col-sm-offset-3.col-sm-9
          = form.submit 'Login', :class => "btn btn-success"