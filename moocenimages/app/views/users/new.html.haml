.signup-box
  .signup-title
    %h2 Signup for MOOCvis
  .signup-form
    = form_for @user, :html => {:class => "form-horizontal", :role => 'form'}, :url => users_path do |form|
      .form-group
        %label.col-sm-4.control-label{:for => 'username'} Username
        .col-sm-8
          = form.text_field :username, :placeholder => 'username', :id => 'username', :class => 'form-control'

      .form-group
        %label.col-sm-4.control-label{:for => 'email'} Email
        .col-sm-8
          = form.text_field :email, :placeholder => 'email@domain.com', :id => 'email', :class => 'form-control'

      .form-group
        %label.col-sm-4.control-label{:for => 'password'} Password
        .col-sm-8
          = form.password_field :password, :placeholder => 'password', :id => 'password', :class => 'form-control'

      .form-group
        %label.col-sm-4.control-label{:for => 'password_confirmation'} Password Confirm
        .col-sm-8
          = form.password_field :password_confirmation, :placeholder => 'password again', :id => 'password_confirmation', :class => 'form-control'
      .form-group
        .col-sm-offset-3.col-sm-9
          = form.submit 'Signup', :class => "btn btn-info"

